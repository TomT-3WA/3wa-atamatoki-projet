	</head>
	<body>
	<header>
		<div class="logo-and-tab">
			<a href="/" class="logo"><img src="{{ asset('img/banner-green.png') }}" alt="Logo du Projet"></a>
			<div class="header-tab">
				{% if not app.user %}
					<div class="non-authentificated">
						<a href="{{ path('security_login') }}" class="sign-up login">Se Connecter</a>
					</div>
					<div class="non-authentificated">
						<a href="{{ path('security_registration') }}" class="sign-up">S'inscrire</a>
					</div>
				{% else %}
					<div class="authentificated">
						<a href="{{ path('security_logout') }}" class="sign-up logout">Se DÃ©connecter</a>
					</div>
					{# <a href="/panier" class="cart">
						<i class="fas fa-shopping-cart"></i>
					</a> #}
				{% endif %}
			</div>
		</div>
		<nav>
			<a href="{{ path('home') }}" class="nav-home nav-animated">Accueil</a>
			<a href="{{ path('tracks') }}" class="nav-tracks nav-animated">Tracks</a>
			<a href="{{ path('atamatoki') }}" class="nav-ata nav-animated">L'artiste</a>
			<a href="{{ path('contact') }}" class="nav-contact nav-animated">Nous Contacter</a>
			{% if is_granted('ROLE_ADMIN') %}
				<a href="{{ path('admin_home')}}" class="nav-admin nav-animated">Page Admin</a>
			{% endif %}
		</nav>
	</header>
		<div class="container">
			{% block body %}{% endblock %}
		</div>
		<footer>
			<div class="footer">
				<a href="/" class="footer-logo"><img src="{{ asset('img/banner-green.png') }}"/></a>
				<div class="footer-flex">
					<div class="footer-contact">
						<h4>Contact</h4>
						<ul class="contact">
							<li>
								<a href="mailto:atamatoki@gmail.com">Mail</a>
							</li>
						</ul>
					</div>
					<div class="footer-social">
						<h4>Reseaux</h4>
						<a class="social-arrow-down" id="social-arrow-down">
							<i class="fa-solid fa-arrow-down" id="arrow"></i>
						</a>
						<div id="socials-details">
							<ul class="social-networks">
								<li>
									<a href="https://open.spotify.com/artist/2BzNGTZcU0rrEmwevE6FFM">
